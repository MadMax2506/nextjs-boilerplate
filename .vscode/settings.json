{
  "workbench.editor.customLabels.enabled": true,
  "workbench.editor.customLabels.patterns": {
    "**/.github/dependabot.yml": "Dependabot",
    "**/.github/workflows/*.yml": "${filename} - GitHub Workflow",
    "**/.scripts/**.sh": "${filename} - Scripts",
    "**/.vscode/settings.json": "Settings",
    "**/.vscode/tasks.json": "Task",

    "**/*.types.ts": "${filename} - Type",
    "**/*.utils.ts": "${filename} - Utility",
    "**/*.process.ts": "${filename} - Process",
    "**/package.json": "Package",
    "**/tsconfig.json": "TypeScript Config",
    "**/tailwind.config.ts": "Tailwind Config",
    "**/next.config.js": "Next Config",
    "**/.env": "Environment Variables",

    "**/prisma/schema.prisma": "Prisma Schema",
    "**/prisma/seed.ts": "Prisma Seeds",
    "**/prisma/**/migrations/*": "${filename} - Prisma Migration",

    "**/src/env.js": "Env Configuration",
    "**/src/styles/**": "${filename} - Style",

    "**/src/server/*.*": "${filename} - Server",

    "**/src/app/api/**": "${filename} - API",
    "**/src/app/**/layout.tsx": "${dirname(1)}/${dirname} - Layout",
    "**/src/app/**/page.tsx": "${dirname(1)}/${dirname} - Page",
    "**/src/app/**/route.ts": "${dirname(1)}/${dirname} - Route",
    "**/src/app/**/_components/**/*.tsx": "${filename} - Component"
  },
  "conventionalCommits.scopes": ["app", "web", "api", "package", "config"],
  "editor.defaultFormatter": "biomejs.biome",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.formatOnSave": true
}
